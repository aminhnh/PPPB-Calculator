<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:background="@color/background"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/number_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/number_bottom"
        android:text=""
        android:textColor="@color/dark_gray"
        android:textSize="64sp"
        android:textAlignment="textEnd"
        android:textStyle="bold"
        />
    <TextView
        android:id="@+id/number_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/buttons"
        android:layout_marginBottom="32dp"
        android:text=""
        android:textColor="@color/dark_gray2"
        android:textSize="32sp"
        android:textAlignment="textEnd"
        android:textStyle="bold"
        android:maxLines="1"
        />

    <LinearLayout
        android:id="@+id/buttons"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:weightSum="4"
        >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="1"
            android:weightSum="5">

            <com.google.android.material.button.MaterialButton
                android:onClick="clear"
                android:text="AC"
                style="@style/button.other"
                >
            </com.google.android.material.button.MaterialButton>
            <com.google.android.material.button.MaterialButton
                android:onClick="update"
                android:text="7"
                style="@style/button"
                >
            </com.google.android.material.button.MaterialButton>
            <com.google.android.material.button.MaterialButton
                android:onClick="update"
                android:text="4"
                style="@style/button"
                >
            </com.google.android.material.button.MaterialButton>
            <com.google.android.material.button.MaterialButton
                android:onClick="update"
                android:text="1"
                style="@style/button"
                >
            </com.google.android.material.button.MaterialButton>
            <com.google.android.material.button.MaterialButton
                android:onClick="update"
                android:text="00"
                style="@style/button"
                >
            </com.google.android.material.button.MaterialButton>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="1"
            android:weightSum="5">

            <com.google.android.material.button.MaterialButton
                android:onClick="update"
                android:text="/"
                style="@style/button.operator"
                >
            </com.google.android.material.button.MaterialButton>
            <com.google.android.material.button.MaterialButton
                android:onClick="update"
                android:text="8"
                style="@style/button"
                >
            </com.google.android.material.button.MaterialButton>
            <com.google.android.material.button.MaterialButton
                android:onClick="update"
                android:text="5"
                style="@style/button"
                >
            </com.google.android.material.button.MaterialButton>
            <com.google.android.material.button.MaterialButton
                android:onClick="update"
                android:text="2"
                style="@style/button"
                >
            </com.google.android.material.button.MaterialButton>
            <com.google.android.material.button.MaterialButton
                android:onClick="update"
                android:text="0"
                style="@style/button"
                >
            </com.google.android.material.button.MaterialButton>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="1"
            android:weightSum="5">

            <com.google.android.material.button.MaterialButton
                android:onClick="update"
                android:text="x"
                style="@style/button.operator"
                >
            </com.google.android.material.button.MaterialButton>
            <com.google.android.material.button.MaterialButton
                android:onClick="update"
                android:text="9"
                style="@style/button"
                >
            </com.google.android.material.button.MaterialButton>
            <com.google.android.material.button.MaterialButton
                android:onClick="update"
                android:text="6"
                style="@style/button"
                >
            </com.google.android.material.button.MaterialButton>
            <com.google.android.material.button.MaterialButton
                android:onClick="update"
                android:text="3"
                style="@style/button"
                >
            </com.google.android.material.button.MaterialButton>
            <com.google.android.material.button.MaterialButton
                android:onClick="update"
                android:text="."
                style="@style/button"
                >
            </com.google.android.material.button.MaterialButton>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="5"
            android:layout_weight="1">

            <com.google.android.material.button.MaterialButton
                app:icon="@drawable/baseline_backspace"
                app:iconGravity="textStart"
                app:iconSize="35dp"
                app:iconTint="@color/dark_blue"
                android:onClick="backspace"
                style="@style/button"
                >
            </com.google.android.material.button.MaterialButton>
            <com.google.android.material.button.MaterialButton
                android:onClick="update"
                android:text="+"
                style="@style/button.operator"
                >
            </com.google.android.material.button.MaterialButton>
            <com.google.android.material.button.MaterialButton
                android:onClick="update"
                android:text="-"
                style="@style/button.operator"
                >
            </com.google.android.material.button.MaterialButton>
            <com.google.android.material.button.MaterialButton
                android:layout_weight="2"
                android:onClick="calculateFinal"
                android:text="="
                style="@style/button.other"
                >
            </com.google.android.material.button.MaterialButton>
        </LinearLayout>


    </LinearLayout>

</RelativeLayout>
